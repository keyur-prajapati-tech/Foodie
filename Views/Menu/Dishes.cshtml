@{
    Layout = "~/Views/Shared/_InventoryLayout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</head>
<body>

    <div class="card rounded mx-5 shadow my-4">

        <div class="container-fluid d-flex justify-content-between">

            <div class="p-2">
                <h5 class="text-center">Today's Special(7)</h5>
            </div>

            <div class="form-check form-switch p-2">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked">
                <label class="form-check-label" for="flexSwitchCheckChecked">Out Of Stock</label>
            </div>
        </div>
    </div>

    <div class="card rounded mx-5 shadow my-4">

        <div class="container-fluid d-flex justify-content-between">

            <div class="p-2">
                <h5 class="text-center">Biryani(2)</h5>
            </div>

            <div class="form-check form-switch p-2">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked">
                <label class="form-check-label" for="flexSwitchCheckChecked">Out Of Stock</label>
            </div>
        </div>
    </div>

    <div class="card rounded mx-5 shadow my-4">

        <div class="container-fluid d-flex justify-content-between">

            <div class="p-2">
                <h5 class="text-center">Vada Pav(2)</h5>
            </div>

            <div class="form-check form-switch p-2">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                <label class="form-check-label" for="flexSwitchCheckChecked">Out Of Stock</label>
            </div>
        </div>
    </div>

    <div class="card rounded mx-5 shadow my-4">

        <div class="container-fluid d-flex justify-content-between">

            <div class="p-2">
                <h5 class="text-center">Litti Chokha(7)</h5>
            </div>

            <div class="form-check form-switch p-2">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked">
                <label class="form-check-label" for="flexSwitchCheckChecked">Out Of Stock</label>
            </div>
        </div>
    </div>
</body>
</html>

