                .nav-tabs .nav-link.active {
                    font-weight: bold;
                    color: #d32f2f;
                    border-bottom: 3px solid #d32f2f;
                }

        /* Sticky Navbar */
        .sticky-navbar {
            position: sticky;
            top: 0;
            background-color: #fff;
            z-index: 1000;
        }
