        }

        .search-bar input {
            width: 350px;
            border-radius: 5px;
            padding: 8px;
        }

        .auth-links a {
            text-decoration: none;
            color: black;
            font-weight: bold;
        }

        .tabs {
            display: flex;
            gap: 20px;
        }

        .tab {
            text-decoration: none;
            color: black;
            font-size: 18px;
            font-weight: bold;
            padding-bottom: 5px;
            border-bottom: 2px solid transparent;
        }

            .tab.active {
                color: red;
                border-bottom: 2px solid red;
            }

        .filters {
            margin-top: 10px;
        }

        .btn {
            border-radius: 5px;
            padding: 8px 12px;
        }

        .footer {
            background-color: #f8f8f8;
            padding: 40px 0;
            font-size: 14px;
            color: #555;
        }

        .footer-logo {
            width: 150px;
            height: 60px;
            margin-bottom: 20px;
        }

        .footer h6 {
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }

        .footer ul {
            list-style: none;
            padding: 0;
        }

            .footer ul li {
                margin-bottom: 8px;
            }

                .footer ul li a {
                    text-decoration: none;
                    color: #555;
                }

                    .footer ul li a:hover {
                        color: red;
                    }

        .social-icons a {
            font-size: 20px;
            margin: 0 10px;
            color: #555;
        }

            .social-icons a:hover {
                color: red;
            }

        .app-links img {
            width: 120px;
            margin: 5px;
        }

        .footer-dropdown {
            padding: 5px 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: 5px;
            background: white;
            cursor: pointer;
        }

        .footer-text {
            font-size: 12px;
            color: #777;
        }

            .footer-text a {
                color: #555;
            }

                .footer-text a:hover {
                    color: red;
                }


        .menu-sidebar {
            position: sticky;
            top: 0;
            height: 100vh;
            overflow-y: auto;
            border-right: 1px solid #ddd;
            background-color: #fff;
            padding-top: 20px;
        }

            .menu-sidebar a {
                text-decoration: none;
                color: #333;
                display: block;
                padding: 10px 15px;
                border-radius: 5px;
            }

                .menu-sidebar a.active,
                .menu-sidebar a:hover {
                    background-color: #ffebeb;
                    font-weight: bold;
                    color: #d32f2f;
                }

        .menu-content {
            padding: 20px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }

            .menu-item img {
                width: 100px;
                height: 100px;
                object-fit: cover;
                border-radius: 10px;
                margin-right: 15px;
            }

        .nav-tabs {
            border-bottom: 2px solid #eee;
        }

