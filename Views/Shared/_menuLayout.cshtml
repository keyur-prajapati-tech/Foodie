@{
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</head>
<body>
    <div class="container-fluid">
        <ul class="nav nav-underline mt-3">
            <li class="nav-item mx-3">
                <a class="nav-link " aria-current="page" asp-controller="Menu" asp-action="Add">Menu Editor</a>
            </li>
            <li class="nav-item mx-3">
                <a class="nav-link" asp-controller="Menu" asp-action="Inventory">Manage Inventory</a>
            </li>
            <li class="nav-item mx-3">
                <a class="nav-link" href="#">Taxes</a>
            </li>
            <li class="nav-item mx-3">
                <a class="nav-link ">Charges</a>
            </li>
        </ul>

    </div>

    <nav class="navbar mt-1">
        <div class="container-fluid">
            <div class="w-50">
                <form class="d-flex" role="search">
                    <input class="form-control me-2 w-50" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>

            <div>
                <button type="button" class="btn btn-outline-primary mx-2">Filters</button>

                <button type="button" class="btn btn-outline-primary mx-2">Submit Changes</button>
            </div>
        </div>
    </nav>



    <div>
        @RenderBody()
    </div>
</body>
</html>
