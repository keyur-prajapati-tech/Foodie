@{
    ViewData["res_name"] = "Pizaa Hut";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <link rel="icon" href="https://cdn.iconscout.com/icon/free/png-256/zomato-1937646-1637644.png" />
    @* <link href="~/css/StyleSheet1.css" rel="stylesheet" /> *@


</head>
<body>
    <div class="content">


        <div class="backdrop" id="backdrop" onclick="toggleSidebar()"></div>
        <div>
            <header>
                <div style=" background: #dfe3f3;">


                    <nav class="navbar navbar-expand-lg navbar-light ">
                        <div class="container-fluid d-lg-flex justify-content-end align-items-end">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                        </div>
                        <div class="container-fluid collapse navbar-collapse d-lg-flex justify-content-end align-items-end" id="navbarSupportedContent">
                            <ul class="navbar-nav">

                                <li class="nav-item ">

                                    <a class="nav-link active" data-bs-toggle="modal" data-bs-target="#login" aria-current="page"><i class="fa-solid fa-bell"></i></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#"><i class="fa-solid fa-gear"></i></a>
                                </li>


                            </ul>
                        </div>
                        <button class="menu-btn" onclick="toggleSidebar()">&#9776;</button>
                    </nav>
                </div>

            </header>

            <!-- Button trigger modal -->
            @* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"> *@
            @*     Launch demo modal *@
            @* </button> *@

            <!-- Modal -->
            <div class="modal fade " id="login" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="container mt-15 modal-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card m-2 shadow">
                                    <div class="card-header modal-header" style="background-color:#dfe3f3;display:flex;justify-content:space-between">
                                        <h6 class="fw-bold">LOGIN IN</h6>
                                        <button type="button" class="btn-close btn" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="card-body">

                                        <div class="container-fluid d-flex flex-column">
                                            <form action="/" method="post">
                                                <div class="form-floating mb-3 w-100">
                                                    <input type="number" class="form-control w-100" id="floatingInput" placeholder="name@example.com">
                                                    <label for="floatingInput">enter 10 Didgit Mobile Number</label>
                                                </div>
                                            </form>
                                            <button type="submit" class="btn fw-bolder" style="background-color:#493d9e;color:white;">Send One Time Password</button>
                                        </div>

                                        <p class="text-center mt-3" style="font-weight:800">OR</p>

                                        <div class="card mx-3">
                                            <button type="submit" class="btn fw-bolder w-100 ">Login with Email</button>
                                        </div>
                                        <div class="card-body ">
                                            <div class="card d-flex flex-row justify-content-between align-items-center w-100 px-3">
                                                <span class="fw-bolder"> Sign In As kevinprajapati123@gmail.com </span>

                                                <img src="~/NewFolder/unnamed.png" alt="Alternate Text" width="50px" class="p-2" />
                                            </div>

                                        </div>

                                        <hr />
                                        <p style="font-size:15px;font-weight:800;">New To Foodie ? <a asp-area="" asp-controller="Register" asp-action="CustomerRegister" style="color:blue">create Account</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>

