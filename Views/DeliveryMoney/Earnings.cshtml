@{
    ViewData["Title"] = "Earnings";
    Layout = ViewBag.Layout ?? "_DeliveryPartnerLayout";
}

<style>
    body {
        background-color: white;
        font-family: 'Arial', sans-serif;
    }

    .earnings-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
    }

    .earnings-summary {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 800px;
        animation: fadeInEffect 0.8s ease-in-out;
    }

    .earnings-header {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
        margin-bottom: 15px;
    }

    @@keyframes fadeInEffect {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .table-responsive {
        width: 100%;
    }

    .earnings-table {
        width: 100%;
        border-radius: 10px;
        overflow: hidden;
    }

        .earnings-table thead {
            background-color: #007bff;
            color: white;
            text-align: center;
        }

        .earnings-table th, .earnings-table td {
            padding: 10px;
            text-align: center;
        }

        .earnings-table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
        }

    .earnings-breakdown {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-top: 20px;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .earnings-breakdown div {
            flex: 1;
            text-align: center;
            font-size: 16px;
            font-weight: bold;
            color: #333;
            padding: 10px;
        }

    .chart-container {
        margin-top: 20px;
        width: 100%;
        max-width: 800px;
    }

    @@media (max-width: 768px) {
        .earnings-summary

    {
        padding: 15px;
    }

    .earnings-header {
        font-size: 20px;
    }

    .earnings-breakdown {
        flex-direction: column;
        align-items: center;
    }

        .earnings-breakdown div {
            width: 100%;
        }

    }
</style>

<div class="earnings-container">
    <div class="earnings-summary">
        <div class="earnings-header">💰 Earnings Summary</div>

        <div class="table-responsive">
            <table class="table earnings-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Orders Completed</th>
                        <th>Base Pay (₹)</th>
                        <th>Tips (₹)</th>
                        <th>Bonuses (₹)</th>
                        <th>Total Earnings (₹)</th>
                    </tr>
                </thead>
                <tbody id="earningsData">
                    <tr>
                        <td>March 10, 2025</td>
                        <td>5</td>
                        <td>₹1200</td>
                        <td>₹200</td>
                        <td>₹100</td>
                        <td>₹1500</td>
                    </tr>
                    <tr>
                        <td>March 11, 2025</td>
                        <td>7</td>
                        <td>₹1800</td>
                        <td>₹200</td>
                        <td>₹100</td>
                        <td>₹2100</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="earnings-breakdown">
            <div>🗓️ This Week: <span id="weeklyTotal">₹3600</span></div>
            <div>📆 This Month: <span id="monthlyTotal">₹8500</span></div>
        </div>
    </div>

    <div class="chart-container">
        <canvas id="earningsChart"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const earningsData = [
            { date: "March 10", earnings: 1500 },
            { date: "March 11", earnings: 2100 },
            { date: "March 12", earnings: 1800 },
            { date: "March 13", earnings: 2300 },
            { date: "March 14", earnings: 1700 },
        ];

        const ctx = document.getElementById("earningsChart").getContext("2d");
        new Chart(ctx, {
            type: "line",
            data: {
                labels: earningsData.map(d => d.date),
                datasets: [{
                    label: "Earnings (₹)",
                    data: earningsData.map(d => d.earnings),
                    backgroundColor: "rgba(0, 123, 255, 0.2)",
                    borderColor: "#007bff",
                    borderWidth: 2,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        let weeklyTotal = earningsData.reduce((sum, d) => sum + d.earnings, 0);
        let monthlyTotal = weeklyTotal * 4;

        document.getElementById("weeklyTotal").textContent = "₹" + weeklyTotal;
        document.getElementById("monthlyTotal").textContent = "₹" + monthlyTotal;
    });
</script>
