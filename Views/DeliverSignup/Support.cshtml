@{
    ViewData["Title"] = "Support";
    Layout = ViewBag.Layout ?? "_DeliveryPartnerLayout";
}

<style>
    body {
        background-color: white;
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
    }

    .support-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
        padding: 20px;
    }

    .support-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 25px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 500px;
        animation: fadeInEffect 0.8s ease-in-out;
    }

    .support-header {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
        margin-bottom: 15px;
    }

    @@keyframes fadeInEffect {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-control {
        background: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        background-color: #007bff;
        transition: all 0.3s ease-in-out;
        width: 100%;
        margin-top: 10px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .form-label {
        color: black;
        font-weight: 600;
    }

    .support-contact {
        text-align: center;
        margin-bottom: 20px;
    }

        .support-contact strong {
            color: #007bff;
        }

    .error-message {
        color: red;
        font-size: 14px;
        display: none;
        text-align: center;
    }
</style>

<div class="support-container">
    <div class="support-card">
        <div class="support-header">📞 Support</div>
        <div class="support-contact">
            <p>If you have any issues, contact us at <strong>support@foodie.com</strong> or call <strong>+91 9876543210</strong>.</p>
        </div>

        <form id="supportForm">
            <label for="issue" class="form-label">Describe Your Issue</label>
            <textarea class="form-control" id="issue" rows="4" required></textarea>
            <p class="error-message" id="error-message">⚠️ Please describe your issue before submitting.</p>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<script>
    document.getElementById("supportForm").addEventListener("submit", function(event) {
        var issueInput = document.getElementById("issue").value.trim();
        var errorMessage = document.getElementById("error-message");

        if (issueInput === "") {
            errorMessage.style.display = "block";
            event.preventDefault();
        } else {
            errorMessage.style.display = "none";
            alert("Your issue has been submitted successfully!");
        }
    });
</script>
