
@{
    ViewData["Title"] = "Pending Approval";
    Layout = ViewBag.Layout ?? "_DeliveryPartnerLayout";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg p-4 bg-white rounded" style="max-width: 500px; margin: auto;">
        <h2 class="text-warning">Account Pending Approval</h2>
        <hr />
        <p class="mt-3">
            Thank you for signing up as a delivery partner. Your account is currently under review.
        </p>
        <p>
            You will receive a notification once your account is approved.
        </p>
        <div class="mt-4">
            <a href="@Url.Action("DeliveryLogin", "DeliverSignup")" class="btn btn-primary">Back to Login</a>
        </div>
    </div>
</div>
