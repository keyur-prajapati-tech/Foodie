@{
    Layout = "~/Views/Shared/_RestaurantRegister.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link rel="icon" href="https://cdn.iconscout.com/icon/free/png-256/zomato-1937646-1637644.png" />

    <title>Order Details Card</title>

</head>
<body class="bg-white">
    <div class="container-fluid">

        <div>
            <h3 class="fs-2 fw-bolder">Menu and other operational details</h3>
            <div class="container-fluid shadow mt-3 card bg-white p-3" style="border-radius:25px">
                <div>
                    <span class="fs-4 fw-bold">
                        Add menu images
                    </span>
                    <br />
                    <span class="fw-lighter">These will be used to create your in-app menu for online ordering</span>
                </div>

                <div class="mb-3 mt-2">
                    <label for="formFile" class="form-label">Upload More Images</label>
                    <input class="form-control" type="file" id="formFile">
                </div>
            </div>

            <div class="container-fluid shadow mt-3 card bg-white p-3" style="border-radius:25px">
                <div>
                    <span class="fs-4 fw-bold">
                        Add Restaurant images
                    </span>
                    <br />
                    <span class="fw-lighter">This will be your restaurant’s profile picture on Zomato — so use your best food shot!</span>
                </div>

                <div class="mb-3 mt-2">
                    <label for="formFile" class="form-label">Upload Restaurant Images</label>
                    <input class="form-control" type="file" id="formFile">
                </div>
            </div>

            <div class="container-fluid shadow mt-3 card bg-white p-3" style="border-radius:25px">
                <div>
                    <span class="fs-4 fw-bold">
                        Select upto 3 cuisines
                    </span>
                    <br />
                    <span class="fw-lighter">Your restaurant will appear in searches for these cuisines</span>
                </div>

                <div class="mb-3 mt-2">
                    <form class="d-flex mt-3 mt-lg-0" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>


            </div>

            <div class="container-fluid shadow mt-3 card bg-white p-3" style="border-radius:25px">
                <div>
                    <span class="fs-4 fw-bold">
                        Restaurant delivery timings
                    </span>
                    <br />

                </div>
                <div>
                    <span>
                        More Open Days
                    </span>
                    <br />
                    <small>Don't forget to uncheck your off-day</small>
                </div>
                <div class="btn-group mt-3" role="group" aria-label="Basic checkbox toggle button group">
                    <input type="checkbox" class="btn-check" id="btncheck1" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btncheck1">Sunday</label>

                    <input type="checkbox" class="btn-check" id="btncheck2" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btncheck2">Monday</label>

                    <input type="checkbox" class="btn-check" id="btncheck3" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btncheck3">Tuesday</label>

                    <input type="checkbox" class="btn-check" id="btncheck4" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btncheck4">Wednesday</label>

                    <input type="checkbox" class="btn-check" id="btncheck5" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btncheck5">Thursday</label>

                    <input type="checkbox" class="btn-check" id="btncheck6" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btncheck6">Friday</label>

                    <input type="checkbox" class="btn-check" id="btncheck7" autocomplete="off">
                    <label class="btn btn-outline-primary" for="btncheck7">Saturday</label>
                </div>
            </div>

            <div class="container-fluid shadow mt-3 card bg-white p-3" style="border-radius:25px">
                <div>
                    <span class="fs-4 fw-bold">
                        FSSAI details
                    </span>
                    <br />
                    <span class="fw-lighter">This is required to comply with regulations on food safety</span>
                </div>

                <div class="mt-2" style="border-radius:10px; background-color:beige;">
                    <div>
                        <small>FSSAI requirements</small>
                    </div>
                    <div>
                        <ul>
                            <li><small>The name on the FSSAI certificate should match either the restaurant's name or the name on the PAN card.</small></li>
                            <li><small>The address on the FSSAI certificate should match the restaurant's address.</small></li>
                        </ul>
                    </div>
                </div>

                <div class="d-flex justify-content-between m-3">
                    <input type="text" class="form-control fw-lighter me-4" style="border-radius:10px" id="owner_name" placeholder="Fassai Number*">

                    <input type="date" class="form-control fw-lighter " style="border-radius:10px" id="owner_email" placeholder="Expiry Date">
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload Your Fassai Image</label>
                    <input class="form-control" type="file" id="formFile">
                </div>
            </div>
        </div>

        <div class="container-fluid mt-3 d-flex justify-content-end bg-light position-sticky p-3 card ">

            <a asp-controller="AddRestaurant" asp-action="ResDocument"><button type="button" class="btn btn-outline-success w-25 ">Next</button></a>
        </div>

    </div>
</body>
</html>





