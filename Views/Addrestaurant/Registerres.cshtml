@{
    Layout = "~/Views/Shared/_RestaurantRegister.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link rel="icon" href="https://cdn.iconscout.com/icon/free/png-256/zomato-1937646-1637644.png" />

    <link href="~/css/mycss.css" rel="stylesheet" />

    <title>Order Details Card</title>

</head>
<body class="bg-white">
    <div class="container-fluid">

        <div>
            <h3 class="fs-2 fw-bolder">Restaurant Information</h3>
            <div class="container-fluid shadow mt-3 card bg-white p-3" style="border-radius:25px">
                <div>
                    <span class="fs-4 fw-bold">
                        Restaurant Name
                    </span>
                    <br />
                    <span class="fw-lighter">Customer will see this name on Foodie</span>
                </div>

                <div class="m-3">
                    <input type="text" class="form-control fw-lighter" style="border-radius:10px" id="rest_name" placeholder="Restaurant Name*">
                </div>

            </div>

            <div class="container-fluid shadow mt-3 card bg-white p-3" style="border-radius:25px">
                <div>
                    <span class="fs-4 fw-bold">
                        Owner Details
                    </span>
                    <br />
                    <span class="fw-lighter">Foodie will use these details for all business communications and updates</span>
                </div>

                <div class="d-flex justify-content-between m-3">
                    <input type="text" class="form-control fw-lighter me-4" style="border-radius:10px" id="owner_name" placeholder="Full Name*">

                    <input type="email" class="form-control fw-lighter " style="border-radius:10px" id="owner_email" placeholder="Email Address*">
                </div>

                <div class="mx-3">
                    <input type="number" class="form-control fw-lighter" style="border-radius:10px" id="owner_phone" placeholder="Phone Number*">
                </div>

                <div class="form-check mx-3">
                    <input class="form-check-input" type="checkbox" value="" id="phone_Checked" checked>
                    <label class="form-check-label" for="flexCheckChecked">
                        Get Restaurant updates Via Whatsapp
                    </label>
                </div>

                <div class="mt-3">
                    <span class="fs-5 fw-bold">
                        Restaurant's Primary Contact number
                    </span>
                    <br />
                    <span class="fw-lighter">Customers,Delivery Partners and Foodie may call on this number for order support</span>
                </div>

                <div class="card d-flex flex-row mx-3 mt-3">
                    <input class="form-check-input" type="checkbox" value="" id="phone_Checked" checked>
                    <label class="form-check-label ms-2" for="flexCheckChecked">
                        Same as Owner Mobile Number
                    </label>
                </div>
            </div>

            <div class="container-fluid shadow mt-3 card bg-white p-3" style="border-radius:25px">
                <div>
                    <span class="fs-4 fw-bold">
                        Add your restaurant's location for order pick-up
                    </span>

                    <hr />
                </div>

                <div class="container-fluid shadow bg-black">
                    <img src="~/NewFolder/png-transparent-world-map-map-world-map-miscellaneous-blue-color-thumbnail.png" class="img-fluid" alt="MAP" />
                </div>

                <div>
                    <p class="fs-5 mt-3">
                        Restaurant address details
                    </p>

                    <p class="fw-lighter">Address details are basis the restaurant location mentioned above</p>

                </div>
                <div class="d-flex justify-content-between m-3">
                    <input type="text" class="form-control fw-lighter me-4" style="border-radius:10px" id="owner_name" placeholder="Shop no. / building no. (optional)">

                    <input type="email" class="form-control fw-lighter " style="border-radius:10px" id="owner_email" placeholder="Floor / tower (optional)">
                </div>

                <div class="d-flex justify-content-between m-3">
                    <input type="text" class="form-control fw-lighter me-4" style="border-radius:10px" id="owner_name" placeholder="Area / Sector / Locality*">

                    <input type="email" class="form-control fw-lighter " style="border-radius:10px" id="owner_email" placeholder="City">
                </div>

                <div class="d-flex justify-content-between m-3">
                    <input type="text" class="form-control fw-lighter me-4" style="border-radius:10px" id="owner_name" placeholder="Add any nearby landmark (optional)">


                </div>
            </div>

            <div class="container-fluid mt-3 d-flex justify-content-end bg-light position-sticky p-3 card ">

                <a asp-controller="AddRestaurant" asp-action="MenuItems"><button type="button" class="btn btn-outline-success w-25 ">Next</button></a>
            </div>

        </div>
    </div>
</body>
</html>




