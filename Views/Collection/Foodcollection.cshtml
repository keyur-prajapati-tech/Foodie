    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        /* Hero Section */
        .hero-section {
            background: url('https://www.gujarattourism.com/content/gujrattourism/en/gujarati-cuisines/_jcr_content/root/responsivegrid/pagebanner.coreimg.jpeg/1596188402204/cuisine-banner1.jpeg') no-repeat center center/cover;
            height: 300px;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .overlay {
            background: rgba(0, 0, 0, 0.6);
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 20px;
        }

            .overlay h2 {
                color: white;
                font-size: 32px;
                font-weight: bold;
            }

            .overlay p {
                color: white;
                font-size: 16px;
                margin-top: 10px;
            }

            .overlay span {
                color: #ddd;
                font-size: 14px;
            }

        .save-btn {
            background: white;
            color: black;
            border: none;
            padding: 8px 15px;
            font-size: 14px;
            border-radius: 20px;
            cursor: pointer;
            margin-left: 15px;
        }

        /* Cards */
        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: 0.3s;
            margin: 5px auto;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card img {
                height: 180px;
                object-fit: cover;
            }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .rating {
            font-size: 14px;
            padding: 5px 10px;
            border-radius: 5px;
            font-weight: bold;
            display: inline-block;
        }

        .green {
            background: #28a745;
            color: white;
        }

        .yellow {
            background: #ffc107;
            color: black;
        }

        .collection-container {
            max-width: 90%;
            margin: auto;
            padding: 40px 0;
        }

        .collection-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .collection-title {
            font-size: 24px;
            font-weight: bold;
        }

        .collection-link {
            color: #ff4f5a;
            font-size: 14px;
            text-decoration: none;
            font-weight: 600;
        }

            .collection-link:hover {
                text-decoration: underline;
            }

        .collection-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 15px;
        }

        .collection-card {
            position: relative;
            border-radius: 10px;
            overflow: hidden;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

            .collection-card:hover {
                transform: scale(1.03);
            }

            .collection-card img {
                width: 100%;
                height: 360px;
                object-fit: cover;
                border-radius: 10px;
            }

        .collection-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
            padding: 15px;
            color: white;
            border-radius: 10px;
        }

        .collection-title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 3px;
        }

        .collection-places {
            font-size: 13px;
            color: #ddd;
        }

        .accordion-section {
            width: 90%;
            max-width: 800px;
            margin: auto;
        }

        h2 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        h2 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .accordion-button {
            font-weight: bold;
        }

        .accordion-item {
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 10px;
        }
    </style>
</head>
