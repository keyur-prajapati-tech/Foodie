@{
    Layout = "~/Views/Shared/_foodieheader.cshtml";
    ViewData["Food_name"] = "Gujrati Dishes";
}

<hr />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Carousel</title>

    <link rel="icon" href="https://cdn.iconscout.com/icon/free/png-256/zomato-1937646-1637644.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Owl Carousel -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">

    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        .carousel-container {
            position: relative;
            max-width: 90%;
            margin: auto;
            overflow: hidden;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
        }

        .carousel-wrapper {
            display: flex;
            gap: 15px;
            overflow-x: auto;
            scroll-behavior: smooth;
            white-space: nowrap;
            padding: 10px;
        }

            .carousel-wrapper::-webkit-scrollbar {
                display: none; /* Hide scrollbar */
            }

        .carousel-item {
            flex: 0 0 auto;
            width: 120px;
            text-align: center;
        }

            .carousel-item img {
                width: 100px;
                height: 100px;
                border-radius: 50%;
                object-fit: cover;
                border: 3px solid #ddd;
            }

        .carousel-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: white;
            border: none;
            cursor: pointer;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            font-size: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            z-index: 10;
        }

        .left-btn {
            left: 5px;
        }

        .right-btn {
            right: 5px;
        }


        .category-container {
            max-width: 95%;
            margin: auto;
            padding: 20px 0;
            text-align: center;
        }

        .brand-container {
            max-width: 95%;
            margin: auto;
            padding: 20px 0;
            text-align: center;
        }

        .owl-carousel .item {
            text-align: center;
            margin: 5px 30px;
        }

        .category-img {
            width: 90%;
            height: 200px;
            object-fit: cover;
            display: block;
            margin: auto;
            border: 3px solid #fff;
            border-radius: 30%;
            margin: 5px 5px;
        }

        .category-title {
            font-size: 16px;
            font-weight: 800;
            margin-top: 10px;
        }

        .owl-nav {
            position: absolute;
            top: 35%;
            width: 100%;
            display: flex;
            justify-content: space-between;
            transform: translateY(-50%);
        }

        .owl-prev, .owl-next {
            background: #fff !important;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .owl-prev:hover, .owl-next:hover {
                background: #f1f1f1 !important;
            }

            .owl-prev i, .owl-next i {
                font-size: 20px;
                color: black;
            }


        .brand-carousel .item {
            text-align: center;
            padding: 10px;
        }

            .brand-carousel .item img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                object-fit: contain;
                border: 3px solid #ddd;
                box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
                margin-left: 50px;
            }

            .brand-carousel .item p {
                font-size: 16px;
                font-weight: 600;
                margin-top: 10px;
                color: #333;
            }

            .brand-carousel .item span {
                font-size: 14px;
                color: #777;
            }



        /* Restaurant card design */
        .restaurant-card {
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }

            .restaurant-card:hover {
                transform: scale(1.03);
            }

        /* Image container with badges */
        .image-container {
            position: relative;
            width: 100%;
        }

            .image-container img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

        .badge {
            position: absolute;
            font-size: 12px;
            padding: 5px 10px;
            border-radius: 5px;
            font-weight: bold;
        }

        .promoted {
            top: 10px;
            left: 10px;
            background: rgba(0, 0, 0, 0.6);
            color: #fff;
        }

        .discount {
            bottom: 10px;
            left: 10px;
            background: #007bff;
            color: #fff;
        }

        /* Restaurant details */
        .restaurant-details {
            padding: 15px;
        }

            .restaurant-details h5 {
                font-size: 18px;
                font-weight: bold;
                margin-bottom: 5px;
            }

        .cuisine {
            font-size: 14px;
            color: #666;
        }

        .price {
            font-size: 14px;
            color: #555;
        }

        .rating {
            background: #28a745;
            color: #fff;
            padding: 5px 8px;
            font-size: 14px;
            border-radius: 5px;
        }

            .rating.low {
                background: #dc3545;
            }

        /* Delivery time */
        .delivery-time {
            font-size: 14px;
            color: #777;
            margin-top: 5px;
        }

    </style>
</head>
<body>
