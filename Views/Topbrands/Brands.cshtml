    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        /* Restaurant Header */
        .restaurant-header h1 {
            font-size: 28px;
            font-weight: bold;
        }

        .cuisine, .location {
            font-size: 16px;
            color: #666;
        }

        .status {
            font-size: 14px;
            margin: 10px 0;
        }

        .open-now {
            color: red;
            font-weight: bold;
        }

        .contact a {
            text-decoration: none;
            color: red;
        }

        /* Action Buttons */
        .action-buttons {
            margin-top: 10px;
        }

            .action-buttons .btn {
                margin-right: 10px;
                border-radius: 20px;
                font-size: 14px;
            }

        /* Ratings */
        .ratings {
            display: flex;
            gap: 20px;
            margin-top: 10px;
        }

        .rating {
            background: #28a745;
            color: white;
            padding: 5px 10px;
            border-radius: 10px;
            font-size: 14px;
        }

        .dining {
            background: #28a745;
        }

        .delivery {
            background: #007bff;
        }

        /* Gallery */
        .gallery {
            display: flex;
            margin-top: 20px;
        }

        .main-image img {
            width: 100%;
            max-width: 600px;
            border-radius: 10px;
        }

        .thumbnails {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-left: 20px;
        }

            .thumbnails img {
                width: 150px;
                height: 100px;
                border-radius: 10px;
            }

        .view-gallery {
            width: 150px;
            height: 100px;
            background: rgba(0, 0, 0, 0.5);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            cursor: pointer;
        }


        .menu-sidebar {
            position: sticky;
            top: 0;
            height: 100vh;
            overflow-y: auto;
            border-right: 1px solid #ddd;
            background-color: #fff;
            padding-top: 20px;
        }

            .menu-sidebar a {
                text-decoration: none;
                color: #333;
                display: block;
                padding: 10px 15px;
                border-radius: 5px;
            }

                .menu-sidebar a.active,
                .menu-sidebar a:hover {
                    background-color: #ffebeb;
                    font-weight: bold;
                    color: #d32f2f;
                }

        .menu-content {
            padding: 20px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }

            .menu-item img {
                width: 100px;
                height: 100px;
                object-fit: cover;
                border-radius: 10px;
                margin-right: 15px;
            }

        .nav-tabs {
            border-bottom: 2px solid #eee;
        }

            /* Active Tab */
            .nav-tabs .nav-link {
                color: #555;
                font-size: 16px;
                padding: 10px 20px;
            }

                /* Active Tab Highlight */
                .nav-tabs .nav-link.active {
                    font-weight: bold;
                    color: #d32f2f;
                    border-bottom: 3px solid #d32f2f;
                }

        /* Sticky Navbar */
        .sticky-navbar {
            position: sticky;
            top: 0;
            background-color: #fff;
            z-index: 1000;
        }
    </style>
</head>
